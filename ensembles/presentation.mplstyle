
### Figures
figure.autolayout   : True

### Saved figures
savefig.dpi         : 400
savefig.bbox        : tight

### Axes
axes.unicode_minus  : False
axes.titlesize      : 18
axes.labelsize      : 18
legend.fontsize     : 12
xtick.labelsize     : 15
ytick.labelsize     : 15
xtick.major.width   : 1
xtick.minor.width   : 1
ytick.minor.width   : 1
ytick.major.width   : 1
xtick.minor.size    : 3
xtick.major.size    : 5
ytick.minor.size    : 3
ytick.major.size    : 5

### Lines
lines.markersize            : 6
#lines.markeredgecolor      : black
lines.markeredgewidth       : 2
lines.linewidth     : 1
lines.linestyle     : -

### Font
font.size           : 22
font.family         : sans-serif
font.style          : normal
font.variant        : normal
font.weight         : normal
font.stretch        : normal
font.sans-serif     : DejaVu Sans

### Grid
grid.color          :   k       # grid color
grid.linestyle      :   :       # dotted
grid.linewidth      :   0.5     # in points
grid.alpha          :   1.0     # transparency, between 0.0 and 1.0

### Text
mathtext.cal        : cursive
mathtext.rm         : serif
mathtext.tt         : monospace
mathtext.it         : serif:italic
mathtext.bf         : serif:bold
mathtext.sf         : sans\-serif
mathtext.fontset    : cm # Should be 'cm' (Computer Modern), 'stix',# 'stixsans' or 'custom'
mathtext.fallback   : cm
mathtext.default    : it        # can be any of the LaTeX font names 
